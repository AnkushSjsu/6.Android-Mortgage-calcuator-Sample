<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:visibility="visible"
    style="@style/AppTheme"
    android:gravity="center">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:id="@+id/calculateTable"
        android:layout_alignParentEnd="false"
        android:background="#7a6fa6b5"
        android:gravity="center_vertical|center"
        android:minWidth="300dp">



        <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        style="@style/AlertDialog.AppCompat"
        android:id="@+id/firstRow"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textAlignment="center"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Value"
            android:id="@+id/HomeLoan"
            android:layout_column="16"
            android:textColor="#020202"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:paddingLeft="0dp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:id="@+id/editText"
            android:minWidth="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:id="@+id/$"
            android:layout_column="18"
            android:maxWidth="50dp"
            android:textAlignment="center"
            android:gravity="fill_vertical|center_horizontal" />
    </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/secRow"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Down Payment"
                android:id="@+id/Downpay"
                android:layout_column="16"
                android:textColor="#020202"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/editText2"
                android:minWidth="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:id="@+id/value2"
                android:layout_column="18"
                android:maxWidth="50dp"
                android:textAlignment="center"
                android:gravity="fill_vertical|center_horizontal" />


        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/thirdRow"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ARP"
            android:id="@+id/ARP"
            android:layout_column="16"
            android:textColor="#c6432cd6"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:paddingLeft="0dp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:id="@+id/editText3"
            android:minWidth="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:id="@+id/value3"
            android:layout_column="18"
            android:maxWidth="50dp"
            android:textAlignment="center"
            android:gravity="fill_vertical|center_horizontal" />
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/FourthRow"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interest"
                android:id="@+id/Interest"
                android:layout_column="16"
                android:textColor="#c6432cd6"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/editText4"
                android:minWidth="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:id="@+id/value4"
                android:layout_column="18"
                android:maxWidth="50dp"
                android:textAlignment="center"
                android:gravity="fill_vertical|center_horizontal" />
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/SixthRow"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Term"
                android:id="@+id/Term"
                android:layout_column="16"
                android:textColor="#c6432cd6"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/editText6"
                android:minWidth="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:id="@+id/value6"
                android:layout_column="18"
                android:maxWidth="50dp"
                android:textAlignment="center"
                android:gravity="fill_vertical|center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/SevenRow"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:id="@+id/Terma"
                android:layout_column="16"
                android:textColor="#c6432cd6"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/button1"
                android:width="50dp"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:onClick="FragmentOneClick"
                android:textStyle="bold"
                android:layout_width="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/value7"
                android:layout_column="18"
                android:maxWidth="50dp"
                android:textAlignment="center"
                android:gravity="fill_vertical|center_horizontal" />
        </TableRow>



    </TableLayout>



</RelativeLayout>