<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:visibility="visible"
    style="@style/AppTheme"
    android:gravity="center"
    android:id="@+id/TwoFrg">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="4px"
        android:id="@+id/calculateTable"
        android:layout_alignParentEnd="false"
        android:background="#c9eceeef"
        android:minWidth="300dp"
        android:orientation="horizontal">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/firstRow"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Value"
                android:id="@+id/HomeLoan"
                android:layout_column="16"
                android:textColor="#ec000000"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/editText1"
                android:minWidth="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:id="@+id/$"
                android:layout_column="18"
                android:maxWidth="50dp"
                android:textAlignment="center"
                android:gravity="fill_vertical|center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/secRow"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Down Payment"
                android:id="@+id/Downpay"
                android:layout_column="16"
                android:textColor="#ec000000"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/editText2"
                android:minWidth="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:id="@+id/value2"
                android:layout_column="18"
                android:maxWidth="50dp"
                android:textAlignment="center"
                android:gravity="fill_vertical|center_horizontal" />


        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/thirdRow"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Interest rate"
                android:id="@+id/ARP"
                android:layout_column="16"
                android:textColor="#ec000000"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/editText3"
                android:minWidth="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:id="@+id/value3"
                android:layout_column="18"
                android:maxWidth="50dp"
                android:textAlignment="center"
                android:gravity="fill_vertical|center_horizontal" />
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/FourthRow"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Terms"
                android:id="@+id/Interest"
                android:layout_column="16"
                android:textColor="#ec000000"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/dropYear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/dropYearList"
                android:prompt="@string/year"/>

        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/SixthRow"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Property tax rate"
                android:id="@+id/Term"
                android:layout_column="16"
                android:textColor="#ec000000"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/editText6"
                android:minWidth="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:id="@+id/value6"
                android:layout_column="18"
                android:maxWidth="50dp"
                android:textAlignment="center"
                android:gravity="fill_vertical|center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            style="@style/AlertDialog.AppCompat"
            android:id="@+id/SevenRow"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:id="@+id/Terma"
                android:layout_column="16"
                android:textColor="#c6432cd6"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/button1"
                android:width="50dp"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:onClick="FragmentOneClick"
                android:textStyle="bold"
                android:layout_width="60dp"
                android:background="#d9466fd4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/value7"
                android:layout_column="18"
                android:maxWidth="50dp"
                android:textAlignment="center"
                android:gravity="fill_vertical|center_horizontal" />


        </TableRow>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:id="@+id/editTextr4"
            android:minWidth="200dp" />




    </TableLayout>



</RelativeLayout>